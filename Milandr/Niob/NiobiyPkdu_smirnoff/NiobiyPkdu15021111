  void Indicator1(unsigned int R0)
 {
 static unsigned int R1;
 static unsigned int R2;
 static unsigned int R3;
 static unsigned int R4;

 R1=R0;
 if(R1>999)
 R1=999;
 R3=0;
 while(R1>=100)
        {
 R1 -=100;
 ++R3;
        }
 R2=0;
 while(R1>=10)
        {
 R1 -=10;
 ++R2;
        }
 Segment[7]=TabDecSeg[R3];
 Segment[6]=TabDecSeg[R2];
 Segment[5]=TabDecSeg[R1];
 }
 void Indicator2(unsigned int R0)
 {
 static unsigned int R1;
 static unsigned int R2;
 static unsigned int R3;
 static unsigned int R4;

 R1=R0;
 if(R1>999)
 R1=999;
 R3=0;
 while(R1>=100)
        {
 R1 -=100;
 ++R3;
        }
 R2=0;
 while(R1>=10)
        {
 R1 -=10;
 ++R2;
        }
 Segment[4]=TabDecSeg[R3];
 Segment[3]=TabDecSeg[R2];
 Segment[2]=TabDecSeg[R1];
 }


 void    ControlRegimInd(void)
{
if((!Avaria)&&(!RegimIndMain))
RegimIndMain=1;
if(RegimIndMain>1)
RegimIndMain=1;
if(Avaria !=AvariaOld)
        {
RegimIndMain=0;
AvariaOld=Avaria;
        }


else if((RegS & 0x40)&&(!(RegSOld & 0x40)))

        {
if(!RegimIndMain)
RegimIndMain=1;
else
RegimIndMain=0;

RegSOld |=0x40;
        }
if(!(RegS & 0x40))
RegSOld &=0xffbf;
}

void IndicatorParam(void)
{
static unsigned int R0;
static unsigned int R1;
ParamInd=7;
switch(ParamInd)
        {
case 0:R0=PeriodUI[0]>>8;
R1=PeriodUI[0] & 0xff;
Segment[0]=0x20;
Segment[1]=0;
PORTF->RXTX &=0xfb;
PORTA->RXTX |=0x20;
break;
case 1:R0=PeriodUI[1]>>8;
R1=PeriodUI[1] & 0xff;
Segment[0]=0x10;

break;
case 2:R0=PeriodUI[2]>>8;
R1=PeriodUI[2] & 0xff;
Segment[0]=0x8;

break;

case 3:R0=AdResult[3]>>1;
R1=AdResult[4]>>2;
Segment[0]=0x4;

break;

case 4:R0=AdResult[6]>>1;
R1=AdResult[7]>>1;
Segment[0]=0x2;

break;

case 5:R0=CtUEndL;
R1=TestAd[2]>>2;
Segment[0]=0x1;

break;
 case 6:R0=TestAd[1]>>2;
R1=TestAd[0];
Segment[0]=0;
Segment[1]=0x20;

break;
 case 7:R0=RegS & 0xff;
R1=RegS>>8;
Segment[0]=0;
Segment[1]=0x22;

break;


default:break;
        }
Indicator1(R0);
Indicator2(R1);
}
void ControlParamInd(void)
{
if(RegimIndMain==1)
        {
if((RegS & 0x20)&&(!(RegSOld & 0x20)))

                {
if(ParamInd<6)
++ParamInd;
else
ParamInd=0;
RegSOld |=0x20;
                }
        }
 if(!(RegS & 0x20))
RegSOld &=0xffdf;

}

 void init_SSPKDG(void)
{
  RST_CLK->PER_CLOCK |=0x100; //SSP1
  RST_CLK->SSP_CLOCK |=0x1000003;

        SPI1->SSPx_CR0=0xf;
        SPI1->SSPx_CR1=0x2;//enable work
        SPI1->SSPx_CPSR=10;//clock

}
     void IndParKDG(void)
    {
    unsigned int R0;
    unsigned int R1;
    unsigned int R2;
    R0=2;
        while(R0)
        --R0;
 R2=CtAnod>>1;
 R2 &=0x7;
 RegSSP=Segment[R2];
 RegSSP=RegSSP<<8;
 RegSSP &=0xff00;

 switch(R2)
                {

 case 0:RegSSP |=0xfe;

 break;
  case 1:RegSSP |=0xfd;

 break;
 case 2:RegSSP |=0xfb;
 break;
  case 3:RegSSP |=0xf7;
 break;
 case 4:RegSSP |=0xef;
 break;
  case 5:RegSSP |=0xdf;
 break;
 case 6:RegSSP |=0xbf;
 break;
  case 7:RegSSP |=0x7f;
 break;

 default: break;
                }
        SPI1->SSPx_DR=RegSSP;
        SPI1->SSPx_CR1 |=0x2;//enable work
    }



 void   ReadKn(void)
{
 RegKnOld=RegKn;


if(!(PORTC->RXTX & 0x10))
RegKn |=1;
else
RegKn &=0xfffe;
if(!(PORTC->RXTX & 0x20))
RegKn |=2;
else
RegKn &=0xfffd;
if(!(PORTC->RXTX & 0x40))
RegKn |=4;
else
RegKn &=0xfffb;
if(!(PORTC->RXTX & 0x80))
RegKn |=8;
else
RegKn &=0xfff7;

if(!(PORTC->RXTX & 0x100))
RegKn |=0x10;
else
RegKn &=0xffef;
if(!(PORTC->RXTX & 0x200))
RegKn |=0x20;
else
RegKn &=0xffdf;
if(!(PORTC->RXTX & 0x400))
RegKn |=0x40;
else
RegKn &=0xffbf;
if(!(PORTC->RXTX & 0x800))
RegKn |=0x80;
else
RegKn &=0xff7f;

if(!(PORTC->RXTX & 0x8))
RegKn |=0x100;
else
RegKn &=0xfeff;

if(!(PORTC->RXTX & 0x1000))
RegKn |=0x200;
else
RegKn &=0xfdff;
if(!(PORTC->RXTX & 0x2000))
RegKn |=0x400;
else
RegKn &=0xfbff;
if(!(PORTC->RXTX & 0x4000))
RegKn |=0x800;
else
RegKn &=0xf7ff;
if(!(PORTC->RXTX & 0x8000))
RegKn |=0x1000;
else
RegKn &=0xefff;


if(RegKnOld==RegKn)
RegS=RegKn;

}














unsigned int ReadAdc1 (unsigned char channel)
{
   unsigned int adc_res;
   unsigned int R0;
   // сброс предыдущего номера канала
   ADC->ADC1_CFG &= 0xfffff40f;

   // установка нового номера канала и запуск преобразования
   ADC->ADC1_CFG|= (channel<< 4);
   R0=30;
   while(R0--)
   ;
   ADC->ADC1_CFG|= 2;
   // ждем окончания преобразования
   R0=30;
   while(R0--)
   ;


   while((ADC->ADC1_CFG)&2)
   ;
   while((!(ADC->ADC1_STATUS) & 4))
 ;

   adc_res=((ADC->ADC1_RESULT)&0x00000fff);
//    ADC->ADC1_STATUS &=0xfffffffd;

   return adc_res;
}
unsigned int ReadAdc1L (unsigned char channel)
{
   unsigned int adc_res;
   unsigned int R0;
   // сброс предыдущего номера канала
   ADC->ADC1_CFG &= 0xfffff40f;

   // установка нового номера канала и запуск преобразования
   ADC->ADC1_CFG|= (channel<< 4);
   R0=100;
   while(R0--)
   ;
   ADC->ADC1_CFG|= 2;
   // ждем окончания преобразования
   R0=100;
   while(R0--)
   ;


   while((ADC->ADC1_CFG)&2)
   ;
   while((!(ADC->ADC1_STATUS) & 4))
 ;

   adc_res=((ADC->ADC1_RESULT)&0x00000fff);
//    ADC->ADC1_STATUS &=0xfffffffd;

   return adc_res;
}



void    ControlReika(void)
{
PORTFF=PORTF->RXTX;

if(CtReikaOn)
        {
--CtReikaOn;
if(!CtReikaOn)
CtReikaOff=CtReikaOff0;
if(RegimWork == 1)
        {

CtReikaOn0=5;
CtReikaOff0=20;
DPNom=2700;

if(AdSum[0]>DPNom)
                {
if((AdSum[0]-DPNom)>100)
CtReikaOff0=15;
else
CtReikaOff0=50;
PORTFF &=0xfb;
PORTFF |=8;
                }
else
PORTFF &=0xf3;
        }
else if((!RegimWork)||(RegimWork==2)||(RegimWork & 0x8)||(RomReceiveRS1[1][3]<10))
        {
 NNomTemp=2700;
CtReikaOn0=(abs(DPNom-AdSum[0]))/10;//5;
if(CtReikaOn0<3)
CtReikaOn0=3;
if(CtReikaOn0>10)
CtReikaOn0=10;
if(RegimWork & 8)
DPNom=3550;
else
DPNom=3600;
if(abs(DPNom-AdSum[0])>100)
CtReikaOff0=15;
else
CtReikaOff0=40;
if(AdSum[0]>(DPNom+20))
                {
PORTFF &=0xfb;
PORTFF |=8;
                }
else if(AdSum[0]<(DPNom-20))
                {
PORTFF &=0xf7;
PORTFF |=4;
                }
else
PORTFF &=0xf3;
        }




else if(RegimWork & 0x20)
        {
if(NNom>=NDiz)
                {
CtReikaOn0=(NNom-NDiz)/16;
if(CtReikaOn0<=3)
CtReikaOn0=3;
if(CtReikaOn0>=8)
CtReikaOn0=8;

if((NNom-NDiz)>200)
CtReikaOff0=80;
else if((NNom-NDiz)>100)
CtReikaOff0=90;
else
CtReikaOff0=100;
//NNom=3000;
                }
else

                {
CtReikaOn0=(NDiz-NNom)/40;
if(CtReikaOn0<=3)
CtReikaOn0=3;
if(CtReikaOn0>=5)
CtReikaOn0=5;

if((NDiz-NNom)>200)
CtReikaOff0=80;
else if((NDiz-NNom)>100)
CtReikaOff0=90;
else
CtReikaOff0=100;
//NNom=3000;
                }


if(NDiz>(NNom+30))
                {
PORTFF &=0xfb;
if(AdSum[0]>2900)
PORTFF |=8;
else
PORTFF &=0xf7;
                }
else if(NDiz<(NNom-30))
                {
PORTFF &=0xf7;
if(AdSum[0]<3750)
PORTFF |=4;
else
PORTFF &=0xfb;
                }
else
PORTFF &=0xf3;
        }

else
PORTFF &=0xf3;
        }
else
//CtReikaon=0
        {
PORTFF &=0xf3;
if(CtReikaOff)
--CtReikaOff;
if(!CtReikaOff)
CtReikaOn=CtReikaOn0;
        }


if((PORTFF & 8)&&(PORTF->RXTX & 4))
        {
PORTF->RXTX &=0xf3;
CtReikaOn=0;
CtReikaOff=CtReikaOff0;
        }
else if((PORTFF & 4)&&(PORTF->RXTX & 8))
        {
PORTF->RXTX &=0xf3;
CtReikaOn=0;
CtReikaOff=CtReikaOff0;
        }
else
        {
if(PORTFF & 8)
PORTF->RXTX |=8;
else
PORTF->RXTX &=0xf7;
if(PORTFF & 4)
PORTF->RXTX |=4;
else
PORTF->RXTX &=0xfb;
        }

}




void    SetError(void)
    {
    unsigned char R0;
     for(R0=0;R0<=14;++R0)
        {
    if(!(CtError[R0]))
    Error |=(1<<R0);
        }
     for(R0=0;R0<=15;++R0)
        {
    if(!(CtError1[R0]))
    Error1 |=(1<<R0);
        }
     if(!(CtError2[0]))
    Error2 |=1;
     if(!(CtError2[1]))
    Error2 |=2;
    }

void    ResetError(void)
    {
    unsigned char R0;
     Error=0;
     for(R0=0;R0<=15;++R0)
    CtError[R0]=CtError0[R0];
      Error1=0;
     for(R0=0;R0<=15;++R0)
    CtError1[R0]=CtError1_0[R0];
       RegimError1=0;
      Error2=0;
     for(R0=0;R0<=15;++R0)
    CtError2[R0]=CtError2_0[R0];
       RegimError2=0;
        RomReceiveRS1[5][3]=0;
        ErrorPKDU2=0;

    }
void LoadRegTransmit(void)
{
unsigned int R1;
unsigned int R2;
RegTransmitRS1[10]=0xff;
RegTransmitRS1[9]=0xff;
RegTransmitRS1[8]=NumberBlock1;

R1=Error1;
RegTransmitRS1[7]=R1 & 0xff;

R1=Error1>>8;
RegTransmitRS1[6]=R1 & 0xff;
R1=0;
if(!(RegS & 0x40))
R1 |=1;//MSHU

if(RegS1 & 4)//BK KS
R1 |=4;
if(RegS1 & 8)//BK KG
R1 |=0x80;
if(Error & 0x8000)//No Pusk
R1|=0x8;
if(Error2 & 0x1)//Raznos
R1|=0x10;
if(Error2 & 0x2)//No Ostanov
R1|=0x20;
if((Error2 & 3)||(Error1 & 0x80bf))//Denable Pusk
R1 |=0x40;
RegTransmitRS1[5]=R1 & 0xff;
if(!Ct_N_U)
        {
 R1=(NDiz>>8) & 0x1f;
 R2=NDiz & 0xff;

 Ct_N_U=1;
        }
else if(Ct_N_U==1)
        {
 R1=(USet>>8) & 0x1f;
 R2=USet & 0xff;
 R1 |=0x40;
 Ct_N_U=2;
        }
else
        {
 R1=0x80;
 R2=TB & 0xff;
 Ct_N_U=0;
        }

RegTransmitRS1[4]=R2 & 0xff;
RegTransmitRS1[3]=R1 & 0xff;


RegTransmitRS1[2]=TM;

R1=0;
if(!RegimWork)
R1 |=1;//Gotov
if(RegimWork == 1)
R1 |=2;//Stop
if((RegimWork == 4)||(RegimWork==0x55)||(RegimWork & 0x2000))
R1 |=4;//Pusk
if((PORTE->RXTX & 0x8)||(PORTF->RXTX & 0x40))
R1 |=8;//Podogrev

if(PORTE->RXTX & 0x2)
R1 |=0x20;//Svecha
if(RegimWork & 0x8)
R1 |=0x40;//Rashol


RegTransmitRS1[1]=R1 & 0xff;
}

  void UART1_IRQHandler(void)
{
unsigned int R0;
unsigned int R1;
unsigned int R2;

        if(TestUsart[5])
        --TestUsart[5];
        else
        TestUsart[5]=110;


R1=UART1->MIS & 0xfff;


R0= UART1->DR & 0xfff;
if(R1 & 0x780)//Int Error
        {

UART1->ICR |=0xfff;//reset int
UART1->RSR_ECR=0xff;//Reset Error
CtReceiveRS1=CtReceiveRS0;
CtTransmitRS1=CtReceiveRS0;
PORTA->RXTX &=0xfb;
return;
        }
else if(R1 & 0x10)
        {
R0 &=0xff;
UART1->ICR |=0xfff;//reset int
UART1->RSR_ECR=0xff;//Reset Error

if(RegimTr)
                {

if(CtTransmitRS1>1)
                        {

       --CtTransmitRS1;
       UART1->DR=RegTransmitRS1[CtTransmitRS1];
       if(CtTransmitRS1>=(CtReceiveRS0-1))
       ControlTransmit1=0;
       else
       ControlTransmit1 +=RegTransmitRS1[CtTransmitRS1];

                        }
else if(CtTransmitRS1==1)
                        {

         --CtTransmitRS1;
        UART1->DR=ControlTransmit1;

                        }
else
                        {
        ++TestUsart[0];
        if(TestUsart[0]>999)
        TestUsart[0]=0;
          RegimTr=0;

         PORTA->RXTX &=0xfb;
        CtUsart[0]=80;//300;//32;
        CtTransmitRS1=CtReceiveRS0;

                        }
               }

else
//Receive far

                {
if(!CtReceiveRS1)
        {
if(TestUsart[1])
--TestUsart[1];
else
TestUsart[1]=5000;
        }
TestUsart[3]=CtReceiveRS1;

RamReceiveRS1[CtReceiveRS1]=R0;
if(CtReceiveRS1==CtReceiveRS0)
                        {

 if(R0==0xff)
 --CtReceiveRS1;
 else
 CtReceiveRS1=CtReceiveRS0;
  return;
                        }

else if(CtReceiveRS1==(CtReceiveRS0-1))
                        {


 if(R0==0xff)
        {
 --CtReceiveRS1;
 ControlReceive1=0;
        }
 else
 CtReceiveRS1=CtReceiveRS0;
 return;
                        }
else if((CtReceiveRS1)&&(CtReceiveRS1<=(CtReceiveRS0-2)))
                        {

 --CtReceiveRS1;
ControlReceive1 +=R0;


                        }
 else if(!CtReceiveRS1)
                        {

CtReceiveRS1=CtReceiveRS0;
TestUsart[2]=RamReceiveRS1[8];
if(TestUsart[8])
--TestUsart[8];
else
TestUsart[8]=5000;

if((ControlReceive1& 0xff)!=R0)
 {
 TestError[0]=R0;
 TestError[1]=ControlReceive1 & 0xff;
 }
else
 {
 TestError[2]=R0;
 TestError[3]=ControlReceive1 & 0xff;
 }

if((ControlReceive1 & 0xff)==R0)
                                        {

 for(R2=0;R2<=10;++R2)
 RomReceiveRS1[R2][RamReceiveRS1[8]]=RamReceiveRS1[R2];
 if(RamReceiveRS1[8]<=4)
                                                        {
 if(RamReceiveRS1[8]==3)
 --Test141223[1];
  if(RamReceiveRS1[8]==2)
 --Test141223[2];
 CtError[RamReceiveRS1[8]]=CtError0[1];
 CtError[RamReceiveRS1[8]+4]=CtError0[5];
 if(RamReceiveRS1[8]==3)
 Error &=0xfff7;
                                                        }

                                        }

                        }
                }

        }
}







         void    TransmitUsart(void)
        {
unsigned int R3;
  LoadRegTransmit();
  ++Test141223[1];
  ++Test141223[2];
  ++Test141223[0];
        RegimTr=1;
       PORTA->RXTX |=0x4;
R3=50;
while(R3)
--R3;
       UART1->CR |=0x100;
       UART1->DR=0xff;//NumberBlock1;
        UART1->ICR |=0x20;//Reset Int Transmit
        CtTransmitRS1=CtReceiveRS0;

        ControlTransmit1=0;//NumberBlock1;
        ControlReceive1=0;

if(TestUsart[4])
--TestUsart[4];
else
TestUsart[4]=100;



        }





  void Timer1_IRQHandler(void)
{

if(TIMER1->STATUS & 0x2)//CNT=ARR
        {
     if(CtAnod<15)
++CtAnod;
else
CtAnod=0;

if(!(CtAnod & 1))
        {

    PORTD->RXTX |=0x8;
IndParKDG();
TIMER1->ARR=1000;
ReadKn();
        }
else
        {

        SPI1->SSPx_CR1 &=0xfffd;//denable work
    PORTD->RXTX &=0xfff7;

TIMER1->ARR=5000;
        }
         }
 TIMER1->STATUS=0;
}


  void Timer2_IRQHandler(void)
{
static unsigned int R0;
static unsigned int R1;
static unsigned int R2;

if(TIMER2->STATUS & 0x80)//CH3
        {
++TestNew[3];
R1=TIMER2->CCR3 & 0xffff;
TIMER2->STATUS &=0xfff7f;

R0=(R1-TimerUIOld[0]) & 0xffff;
if(R0>=PeriodUITemp[0])
R2=R0-PeriodUITemp[0];
else
R2=PeriodUITemp[0]-R0;
if(R2<1000)
PeriodUI[0]=R0;
PeriodUITemp[0]=R0;
TimerUIOld[0]=R1;
TIMER2->STATUS &=0x2;
        }
if(TIMER2->STATUS & 0x2)//CNT=ARR
        {
if(CANPauza)
--CANPauza;





if(CtUsart[0])
--CtUsart[0];
else
        {
 if(PORTA->RXTX & 0x40)
 TransmitUsart();
 CtUsart[0]=80;//64;//32;
        }



TIMER2->STATUS &=0xfffd;


        }
 TIMER2->STATUS=0;


}



  void Timer3_IRQHandler(void)
{
unsigned int R0;
unsigned long R1;
unsigned int R2;
//unsigned long R3;
//unsigned int R4;


 if(TIMER3->STATUS & 0x40)//CH2
        {

R1=TIMER3->CCR2 & 0xffff;
TIMER3->STATUS &=0xfffbf;

R0=(R1-TimerUIOld[1]) & 0xffff;
if(R0>=PeriodUITemp[1])
R2=R0-PeriodUITemp[1];
else
R2=PeriodUITemp[1]-R0;
if(R2<1000)
PeriodUI[1]=R0;
PeriodUITemp[1]=R0;
TimerUIOld[1]=R1;

        }
  if(TIMER3->STATUS & 0x80)//CH3
        {
if(PORTB->RXTX & 0x80)
PORTB->RXTX &=0xf7f;
else
PORTB->RXTX |=0x80;

R1=TIMER3->CCR3 & 0xffff;
TIMER3->STATUS &=0xff7f;

R0=(R1-TimerUIOld[2]) & 0xffff;
if(R0>=PeriodUITemp[2])
R2=R0-PeriodUITemp[2];
else
R2=PeriodUITemp[2]-R0;
//if(R2<1000)
PeriodUI[2]=R0;
PeriodUITemp[2]=R0;
TimerUIOld[2]=R1;

        }



else if(TIMER3->STATUS & 0x2)//CNT==ARR
        {

TIMER3->STATUS &=0xfffd;
        }

TIMER3->STATUS =0;
}








void    InitTimer1(void)
{
RST_CLK->PER_CLOCK |=0x4000; //Timer1
TIMER1->CNTRL = 0;
TIMER1->CNT = 0x00000007; //CT
TIMER1->ARR =0xffff;//CT from 0 to ARR
TIMER1->PSG =0x1;//FTim2=clk/2
TIMER1->CNTRL = 0x1;//Enable Timer1
TIMER1->IE = 0x2;//CNT=ARR

SYS->ISER00 |=0x4000;//Timer1
}









void AccountUOut(void)
{
unsigned int R1;
    R1=RomReceiveRS1[7][3]<<8;
    R1 |=RomReceiveRS1[6][3];//UOut
    if(Error & 8)
    R1=0;
    UOut=R1;
}
void AccountNDiz(void)
{
unsigned int R0;
unsigned long R1;
R1=0;
for(R0=0;R0<=15;++R0)
        {

if(Period[R0]>=62000)
R1 +=62000;
else
R1 +=Period[R0];
        }
R1 >>=4;
PeriodCalc=R1;
if(R1>=62000)
NDiz=0;
else
NDiz=4000000/R1;
}





 void InitPORTA(void)
{
  PORTA->OE=0xbd;

  PORTA->FUNC =0;

  PORTA->ANALOG =0xff; //PA-digital
  PORTA->PULL=0x420000; //PA-R+=on
  PORTA->PWR=0x5555;
  PORTA->PD=0;////Trigger Shmitta=on

}
void InitPORTB(void)
{
RST_CLK->PER_CLOCK |=0x400000; //PORTB
PORTB->ANALOG =0xffff;
PORTB->OE =0;
PORTB->PULL=0x40000000;//R +=on
PORTB->FUNC =0;
PORTB->PWR=0x55555555;
PORTB->PD=0;//Trigger Shmitta=on
}
void InitPORTC(void)
{
  RST_CLK->PER_CLOCK |=0x800000;
  PORTC->RXTX=0;
  PORTC->OE =0;
  PORTC->FUNC =0;
  PORTC->ANALOG =0xffff; //PC0-digital
  PORTC->PULL =0xfff80000; //PC0-R+=on
  PORTC->PWR=0x55555555;
  PORTC->PD=0;//Trigger Shmitta=on

}

void InitPORTD(void)
{
  PORTD->ANALOG=0xffff; //analog
  PORTD->PULL=0x50000;//R +=on
  PORTD->PWR=0x55555555; //
  PORTD->OE =0x1408; //PD1=out
  PORTD->FUNC =0x330000a;//ssp1,UART2 TXD,UART2 RXD
  PORTD->PD=0;//Trigger Shmitta=on
}


void InitPORTF(void)
{


  PORTF->OE=0xff; //PF0,PF1=out
  PORTF->FUNC=0;
  PORTF->ANALOG |=0xff; //PF-digital
  PORTF->PULL=0; //PF2,PF3-R-=on
   PORTF->PWR=0x5555; //Slow front
    PORTF->PD=0; //driver
}









void main(void)
{
unsigned long RMain;
#ifdef DEBUG
  debug();
#endif

RST_CLK->PER_CLOCK |=0x10; //RST_CLK
RST_CLK->PER_CLOCK |=0x8;//EEPROM
RST_CLK->PER_CLOCK |=0x200000; //PORTA

InitPORTB();
InitPORTC();
RMain=1000;
while(RMain)
--RMain;
if(!(PORTB->RXTX & 0x4000))
        {
while(1)
                {

PORTC->RXTX &= 0xfffc;
PORTC->RXTX &= 0xfffc;
PORTC->RXTX &= 0xfffc;
PORTC->RXTX &= 0xfffc;
                }
        }

else
        {

InitPORTC();


RST_CLK->PER_CLOCK |=0x20000000; //PORTF
InitPORTF();
InitPORTA();

RST_CLK->PER_CLOCK |=0x1000000; //PORTD
InitPORTD();
RST_CLK->HS_CONTROL=0x1;//osc_E=on
while(!(RST_CLK->CLOCK_STATUS & 4))
RST_CLK->CPU_CLOCK=0x102;//CLOCK_CPU=osc_E




RST_CLK->TIM_CLOCK=0x7000000;
InitTimer1();

InitUsart();




 CtReceiveRS1=CtReceiveRS0;
 CtTransmitRS1=CtReceiveRS0;

 init_SSPKDG();
CtEeprom=1000;
CtEepromT2=1000;

ResetError();

RegimWork=0;
RomReceiveRS1[7][4]=0;
RomReceiveRS1[5][4]=0;
RomReceiveRS1[7][2]=0;
DPNom=3350;
CtDPNom=100;
CtReikaOff0=50;
CtReikaOn0=5;
NNom=2600;
CtUsart[0]=80;//
ErrorPKDU2=0;
PORTB->RXTX &=0xfbf;
CtTimeKSKG=100;

CtReadKn=40;

while(1)


              {

IWDG->KR=0xaaaa;


Avaria=0;
ControlRegimInd();

if((!RegimIndMain)&&(Avaria))
//IndicatorAvaria();
Indicator1(111);
else
        {
ControlParamInd();
IndicatorParam();
        }



 if(TimeWork<9999)
 ++TimeWork;
 else
 TimeWork=0;


              }
        }

}


